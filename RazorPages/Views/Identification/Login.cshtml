@using RazorPages.Models
@model RazorPages.Views.Identification.LoginModel
@{
}


<div class="container border" style=" padding :30px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="credential.login"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="credential.login" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="credential.login"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="credential.password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="credential.password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="credential.password"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-5">
                
            </div>
        </div>
    </form>

</div>